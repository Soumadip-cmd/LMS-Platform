<!-- verification.ejs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify Your Account | Preplings</title>
    <style>
        body {
            font-family: 'Open Sans', Arial, sans-serif;
            line-height: 1.6;
            color: #3C3C3C;
            margin: 0;
            padding: 0;
            background-color: #F5F5F5;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #FFFFFF;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }
        .header {
            background-color: #58CC02;
            padding: 24px;
            text-align: center;
        }
        .header img {
            height: 40px;
        }
        .content {
            padding: 24px;
        }
        .code-container {
            background-color: #F7F7F7;
            border-radius: 8px;
            padding: 16px;
            margin: 24px 0;
            text-align: center;
        }
        .verification-code {
            font-size: 32px;
            font-weight: bold;
            color: #1CB0F6;
            letter-spacing: 8px;
        }
        .expiry-note {
            font-size: 14px;
            color: #777777;
            text-align: center;
            margin-top: 8px;
        }
        .message {
            font-size: 16px;
            margin-bottom: 24px;
        }
        .footer {
            background-color: #F7F7F7;
            padding: 16px;
            text-align: center;
            font-size: 12px;
            color: #777777;
        }
        .button {
            display: inline-block;
            background-color: #58CC02;
            color: white;
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 12px;
            font-weight: bold;
            margin-top: 16px;
        }
        .mascot {
            text-align: center;
            margin: 16px 0;
        }
        .mascot img {
            width: 120px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <img src="https://d35aaqx5ub95lt.cloudfront.net/images/email/duo-logo-white.svg" alt="Preplings Logo">
        </div>
        <div class="content">
            <h1>Verify Your Account</h1>
            <div class="message">
                <p>Hey <%= name %>,</p>
                <p>Welcome to Preplings! You're just one step away from starting your language learning journey. Please use the verification code below to complete your registration:</p>
            </div>
            
            <div class="code-container">
                <div class="verification-code"><%= otp %></div>
                <p class="expiry-note">This code will expire in 15 minutes</p>
            </div>
            
            <div class="mascot">
                <img src="https://d35aaqx5ub95lt.cloudfront.net/images/email/duo-jumping-green.png" alt="Mascot">
            </div>
            
            <p>Can't wait to see your progress!</p>
            <p>The Preplings Team</p>
            
            <div style="text-align: center;">
                <a href="<%= websiteUrl %>" class="button">Go to Preplings</a>
            </div>
        </div>
        
        <div class="footer">
            <p>This email was sent to you because you signed up for Preplings. If you didn't request this, you can safely ignore this email.</p>
            <p>&copy; 2025 Preplings. All rights reserved.</p>
        </div>
    </div>