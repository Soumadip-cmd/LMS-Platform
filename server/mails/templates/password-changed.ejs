<!-- password-changed.ejs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Changed Successfully | Preplings</title>
    <style>
        body {
            font-family: 'Open Sans', Arial, sans-serif;
            line-height: 1.6;
            color: #3C3C3C;
            margin: 0;
            padding: 0;
            background-color: #F5F5F5;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #FFFFFF;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }
        .header {
            background-color: #58CC02;
            padding: 24px;
            text-align: center;
        }
        .header img {
            height: 40px;
        }
        .content {
            padding: 24px;
        }
        .message {
            font-size: 16px;
            margin-bottom: 24px;
        }
        .footer {
            background-color: #F7F7F7;
            padding: 16px;
            text-align: center;
            font-size: 12px;
            color: #777777;
        }
        .button {
            display: inline-block;
            background-color: #58CC02;
            color: white;
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 12px;
            font-weight: bold;
            margin-top: 16px;
        }
        .mascot {
            text-align: center;
            margin: 16px 0;
        }
        .mascot img {
            width: 120px;
        }
        .success-icon {
            text-align: center;
            margin: 24px 0;
        }
        .success-icon img {
            width: 80px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <img src="https://d35aaqx5ub95lt.cloudfront.net/images/email/duo-logo-white.svg" alt="Preplings Logo">
        </div>
        <div class="content">
            <h1>Password Changed Successfully</h1>
            
            <div class="success-icon">
                <img src="https://d35aaqx5ub95lt.cloudfront.net/images/email/achievement-complete.svg" alt="Success">
            </div>
            
            <div class="message">
                <p>Hey <%= name %>,</p>
                <p>Your password has been changed successfully. You can now log in to your Preplings account with your new password.</p>
            </div>
            
            <div class="mascot">
                <img src="https://d35aaqx5ub95lt.cloudfront.net/images/email/duo-thumbs-up.png" alt="Mascot">
            </div>
            
            <p>If you did not make this change, please contact our support team immediately.</p>
            <p>The Preplings Team</p>
            
            <div style="text-align: center;">
                <a href="<%= websiteUrl %>/login" class="button">Login Now</a>
            </div>
        </div>
        
        <div class="footer">
            <p>This email was sent to you to confirm a password change for your Preplings account.</p>
            <p>&copy; 2025 Preplings. All rights reserved.</p>
        </div>
    </div>
</body>
</html>